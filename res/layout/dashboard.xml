

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">

     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:background="@layout/header1">
        

<LinearLayout android:id="@+id/header"
    
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:background="@layout/insideheader"
                android:orientation="horizontal"
               >
                <!-- Logo Start-->

             <TextView
        android:id="@+id/myImageViewTextxcxv1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:layout_margin="1dp"     
        android:textSize="25dip"
        android:gravity="center"    
        android:text="Parent Child Mapping"
        android:textColor="#ffffff" />
                
                <!-- Logo Ends -->
        </LinearLayout>
              
   <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="5dip" 
            android:paddingTop="50dip" 
            android:paddingBottom="50dp"            
            android:background="@layout/header_gradient"       
            android:paddingLeft="50dip" >

         <LinearLayout
            android:id="@+id/lavdy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"        
            android:orientation="vertical"
            android:padding="10dip" 
            android:paddingTop="50dip" 
            android:paddingBottom="50dp"            
            android:background="@layout/header1"                   
            >
            
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Student Detail"
                android:layout_gravity="center"
               ></TextView>  
         </LinearLayout>
       
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Enter Your Student Name"
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>
          
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Shubham Awasthi"
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>

         
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Registration No."
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>

          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="1600004"
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>
          
          
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="1600004"
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>
          
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="1600004"
                android:paddingBottom="15dp"
                android:paddingTop="50dip"/>
                 </LinearLayout>
      
   <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:orientation="vertical"
               android:layout_below="@id/lay1"
                android:layout_alignParentBottom="true"
                android:background="@layout/insideheader" >
                <TextView
        android:id="@+id/myImageViewTextdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Powered By-Mkt Softwares"
        android:textColor="#ffffff" />

                   <ImageView 
                       android:id="@+id/ImageViewHead"
                        android:background="@layout/footer_repeat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                           android:scaleType="centerInside"
                           />
                    
        </LinearLayout>
        <!-- Footer Ends -->
  
  
</RelativeLayout>
</ScrollView>
